<?xml version="1.0"?>
<ruleset name="WP Social Manager">
	<rule ref="WordPress-Core"/>
	<rule ref="WordPress-Docs"/>
	<rule ref="WordPress-Extra"/>
	<rule ref="WordPress.NamingConventions.ValidVariableName">
		<properties>
            <property name="customPropertiesWhitelist" value="parentNode" type="array"/>
        </properties>
	</rule>
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" value="wp-social-manager" />
		</properties>
	</rule>
</ruleset>
